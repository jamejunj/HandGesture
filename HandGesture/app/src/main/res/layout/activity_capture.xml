<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaptureActivity">

    <Button
        android:id="@+id/btn_capture"
        android:layout_width="307dp"
        android:layout_height="55dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/capturebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/btn_capture" />

    <Button
        android:id="@+id/btn_select"
        android:layout_width="307dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/gallerybtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_capture" />


    <Button
        android:id="@+id/btn_compare"
        android:layout_width="307dp"
        android:layout_height="55dp"
        android:layout_marginTop="488dp"
        android:background="@drawable/btn_primary"
        android:fontFamily="@font/twcenmt"
        android:text="Compare Image"
        android:textAllCaps="false"
        android:textColor="@drawable/btn_primary_text"
        android:textFontWeight="500"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_feature"
        android:layout_width="307dp"
        android:layout_height="55dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/btn_primary"
        android:fontFamily="@font/twcenmt"
        android:text="Feature Extraction"
        android:textAllCaps="false"
        android:textColor="@drawable/btn_primary_text"
        android:textFontWeight="500"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="372dp"
        android:layout_height="115dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title_lg" />

</androidx.constraintlayout.widget.ConstraintLayout>